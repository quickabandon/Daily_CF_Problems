// Problem: A. A Twisty Movement
// Contest: Codeforces - Codeforces Round 462 (Div. 1)
// URL: https://codeforces.com/problemset/problem/933/A
// Memory Limit: 256 MB
// Time Limit: 1000 ms
// 
// Powered by CP Editor (https://cpeditor.org)

#include<bits/stdc++.h>
using namespace std;
const int N=2005;
int a[N];
int n;

void solve(){
	cin>>n;
	for(int i=1;i<=n;i++)	
		cin>>a[i];
	int f1=0,f12=0,f121=0,f1212=0;
	for(int i=1;i<=n;i++){
		if(a[i]==1){
			f1++,f121++;
		}
		else
			f12++,f1212++;
		f12=max(f1,f12);
		f121=max(f12,f121);
		f1212=max(f121,f1212);
		//cout<<f1<<" "<<f12<<" "<<f121<<" "<<f1212<<"\n";
	}
	cout<<f1212;
	
}

signed main()
{
	ios::sync_with_stdio(0),cin.tie(0);
	int tt=1;
	while(tt--)solve();
}


